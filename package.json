{
  "name": "@jeonhui/alloy",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "publish:packages": "turbo run publish",
    "publish:alloy-ts": "pnpm --filter @jeonhui/alloy-ts publish",
    "version:patch": "pnpm -r version patch",
    "version:minor": "pnpm -r version minor",
    "version:major": "pnpm -r version major"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
